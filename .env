# =============================================================================
# CONFIGURAÇÕES DO PROJETO HAVOC CMS
# =============================================================================
# Este arquivo contém variáveis de ambiente para o projeto Havoc CMS.
#
# ⚠️  IMPORTANTE - SEGURANÇA:
# - NUNCA versione este arquivo no Git!
# - Mantenha sempre no .gitignore
# - Use .env.example para referência sem dados sensíveis
# - Em produção, use variáveis de ambiente do servidor/container
# - Revise periodicamente as configurações de segurança
# =============================================================================

# =============================================================================
# CONFIGURAÇÕES BÁSICAS DO DJANGO
# =============================================================================

# Chave secreta do Django (OBRIGATÓRIA em produção)
# Gere uma nova: python -c "import secrets; print(secrets.token_urlsafe(50))"
DJANGO_SECRET_KEY=django-insecure-dev-key-CHANGE-IN-PRODUCTION-2024-havoc-cms

# Modo debug (SEMPRE False em produção)
DEBUG=True

# Hosts permitidos (configure domínios específicos em produção)
# Em produção, NUNCA use "*" - especifique domínios exatos
ALLOWED_HOSTS=localhost,127.0.0.1,testserver

# Ambiente de execução (development, staging, production)
ENVIRONMENT=development

# =============================================================================
# CONFIGURAÇÕES DE BANCO DE DADOS
# =============================================================================

# Opção 1: URL completa do banco (recomendado para produção)
# Formato: postgresql://user:password@host:port/database
# DATABASE_URL=postgresql://user:password@host:port/database

# Opção 2: Configuração manual (para desenvolvimento)
DATABASE_ENGINE=sqlite
DATABASE_NAME=db.sqlite3
DATABASE_USER=havoc_user
DATABASE_PASSWORD=
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Configurações avançadas de conexão
DB_CONN_MAX_AGE=60

# =============================================================================
# CONFIGURAÇÕES DE EMAIL
# =============================================================================

# Backend de email (console para desenvolvimento, smtp para produção)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Configurações SMTP (descomente e configure para produção)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_USE_SSL=False
# EMAIL_HOST_USER=seu-email@gmail.com
# EMAIL_HOST_PASSWORD=sua-senha-de-app
# EMAIL_TIMEOUT=30

# Emails padrão do sistema
DEFAULT_FROM_EMAIL=noreply@havoc.local
CONTACT_EMAIL=contato@havoc.local

# ⚠️  IMPORTANTE - EMAIL:
# - Para Gmail, use "Senhas de app" em vez da senha normal
# - Para outros provedores, verifique as configurações SMTP
# - Em produção, considere usar serviços como SendGrid, Mailgun, etc.

# =============================================================================
# CONFIGURAÇÕES DE SEGURANÇA
# =============================================================================

# Origens confiáveis para CSRF (configure domínios específicos em produção)
CSRF_TRUSTED_ORIGINS=http://127.0.0.1:8000,http://localhost:8000

# Configurações de cookies (automáticas baseadas no ambiente)
# SESSION_COOKIE_SECURE=False  # Auto: True em produção, False em desenvolvimento
# CSRF_COOKIE_SECURE=False     # Auto: True em produção, False em desenvolvimento

# Configurações HTTPS/SSL (automáticas em produção)
# SECURE_SSL_REDIRECT=False         # Auto: True em produção
# SECURE_HSTS_SECONDS=0             # Auto: 31536000 em produção
# SECURE_HSTS_INCLUDE_SUBDOMAINS=False  # Auto: True em produção
# SECURE_HSTS_PRELOAD=False         # Auto: True em produção

# Configurações de sessão
SESSION_COOKIE_AGE=86400
SESSION_EXPIRE_AT_BROWSER_CLOSE=False

# ⚠️  IMPORTANTE - SEGURANÇA:
# - As configurações SSL são aplicadas automaticamente em produção
# - Configure CSRF_TRUSTED_ORIGINS com seus domínios específicos
# - Use HTTPS sempre em produção
# - Revise periodicamente as configurações de segurança

# =============================================================================
# CONFIGURAÇÕES DE CACHE E PERFORMANCE
# =============================================================================

CACHE_BACKEND=django.core.cache.backends.locmem.LocMemCache
CACHE_LOCATION=unique-snowflake
# REDIS_URL=redis://localhost:6379/1  # Descomente para produção com Redis

# =============================================================================
# CONFIGURAÇÕES DE ARQUIVOS
# =============================================================================

MAX_UPLOAD_SIZE=5242880
ALLOWED_IMAGE_EXTENSIONS=.jpg,.jpeg,.png,.gif,.webp
ALLOWED_DOCUMENT_EXTENSIONS=.pdf,.doc,.docx,.txt

# =============================================================================
# CONFIGURAÇÕES DO SITE
# =============================================================================

SITE_NAME=Havoc
SITE_DESCRIPTION=Sistema de gerenciamento de conteúdo moderno
SITE_URL=http://127.0.0.1:8000
PAGINATE_BY=12
ARTICLES_PER_PAGE=12
USERS_PER_PAGE=20

# =============================================================================
# CONFIGURAÇÕES DE RATE LIMITING
# =============================================================================

RATELIMIT_ENABLE=True
RATELIMIT_USE_CACHE=default

# =============================================================================
# CONFIGURAÇÕES DE LOGGING
# =============================================================================

LOG_LEVEL=INFO
LOG_FILE=

# =============================================================================
# CONFIGURAÇÕES DE BACKUP
# =============================================================================

BACKUP_DIR=backups
BACKUP_RETENTION_DAYS=30

# =============================================================================
# CONFIGURAÇÕES DE INTEGRAÇÃO
# =============================================================================

EXTERNAL_API_KEY=
EXTERNAL_API_URL=
WEBHOOK_URL=

# =============================================================================
# CONFIGURAÇÕES DE MONITORAMENTO
# =============================================================================

SENTRY_DSN=
HEALTH_CHECK_ENABLED=True

# =============================================================================
# CONFIGURAÇÕES PERSONALIZADAS
# =============================================================================

ACTIVE_MODULES=accounts,config,pages,articles
DEFAULT_THEME=light
DEFAULT_LANGUAGE=pt-br
DEFAULT_TIMEZONE=America/Sao_Paulo

# =============================================================================
# REDES SOCIAIS (opcional)
# =============================================================================

FACEBOOK_URL=
TWITTER_URL=
LINKEDIN_URL=
GITHUB_URL=

# =============================================================================
# ANALYTICS E TRACKING (opcional)
# =============================================================================

GOOGLE_ANALYTICS_ID=
GOOGLE_TAG_MANAGER_ID=
FACEBOOK_PIXEL_ID=

